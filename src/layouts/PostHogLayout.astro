---
import PostHog from '../components/posthog.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'AI Workshop', description = 'Learn to build with Claude Code' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <PostHog />
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <slot name="head" />
</head>
<body>
  <slot />
</body>
</html>
